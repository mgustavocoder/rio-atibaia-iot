    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "runtimeVersion": "14.18.1",
            "request": "launch",
            "name": "Debugger",
            "outputCapture" : "std",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/dist/src/app.js",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "envFile": "${workspaceFolder}/.env.dev",
        }
    ]
}